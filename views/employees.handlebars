{{> navbar}}
<div class="employees-top-bar">
    <ul>
        <li>Name</li>
        <li>Title</li>
        <li>Manager</li>
        <li>Department</li>
    </ul>
    <button class="add-employee"><a href="/api/employees/create"><div class="add"></div></a></button>
</div>

{{#each employees}}
<div class="employee-info">
    <ul>
        <li>{{this.first_name}} {{this.last_name}}</li>
        <li>{{this.job.job_title}}</li>
        <li>{{this.employee_manager}}</li>
        <li>{{this.department.department_name}}</li>
    </ul>
    <button class="editbtn" data-id="{{this.id}}"><span class="material-symbols-outlined openbtn">edit_square</span></button>
</div>
{{/each}}
<script src="/css/employee-frontend.js"></script>